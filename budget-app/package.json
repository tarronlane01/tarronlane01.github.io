{
  "name": "budget",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint .",
    "lint:file-length": "bash scripts/check-file-length.sh",
    "precommit": "npm run lint:file-length && npm run lint",
    "preview": "vite preview",
    "publish": "f() { if [ \"$1\" = \"-m\" ]; then shift; fi; msg=\"$*\"; if [ -z \"$msg\" ]; then echo 'Error: Please provide a commit message. Usage: npm run publish -- -m \"your message\"' && exit 1; fi; npm run precommit && npm run build && cd .. && git add -A && (git diff --cached --quiet || git commit -m \"$msg\") && git push; }; f"
  },
  "dependencies": {
    "@tanstack/query-async-storage-persister": "^5.90.14",
    "@tanstack/react-query": "^5.90.12",
    "@tanstack/react-query-persist-client": "^5.90.14",
    "firebase": "^12.7.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.11.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@types/node": "^24.10.1",
    "@types/react": "^19.2.5",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.1",
    "eslint": "^9.39.1",
    "eslint-plugin-react-hooks": "^7.0.1",
    "eslint-plugin-react-refresh": "^0.4.24",
    "globals": "^16.5.0",
    "typescript": "~5.9.3",
    "typescript-eslint": "^8.46.4",
    "vite": "^7.2.4"
  }
}
